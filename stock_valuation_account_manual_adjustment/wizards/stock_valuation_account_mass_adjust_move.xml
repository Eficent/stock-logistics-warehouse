<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_stock_valuation_account_mass_adjust"
            model="ir.ui.view">
        <field name="name">Recreate Valuation Entries</field>
        <field name="model">stock.valuation.account.mass.adjust.move</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
             <form string="Adjust Inventory Account">
                 <footer>
                     <button name="process"
                             string="Process"
                             type="object"
                             class="oe_highlight"
                             groups="stock_valuation_account_manual_adjustment.group_stock_valuation_account_manual_adjustment"/>
                     <button special="cancel" string="Cancel" class="oe_link"/>
                 </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_valuation_account_mass_adjust"
            model="ir.actions.act_window">
        <field name="name">Recreate Valuation Entries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.valuation.account.mass.adjust.move</field>
        <field name="view_mode">form</field>
        <field name="view_id"
               ref="view_stock_valuation_account_mass_adjust"/>
        <field name="binding_model_id" ref="stock.model_stock_move"/>
        <field name="target">new</field>
    </record>

</odoo>

