<odoo>

    <record id="stock_inventory_history_tree_view" model="ir.ui.view">
        <field name="name">stock.inventory.history.tree</field>
        <field name="model">stock.inventory.history</field>
        <field name="arch" type="xml">
            <tree string="Inventory History">
                <field name="location_id"/>
                <field name="inventory_id"/>
                <field name="create_date"/>
                <field name="accuracy"/>
            </tree>
        </field>
    </record>

    <record id="stock_inventory_history_form_view" model="ir.ui.view">
        <field name="name">stock.inventory.history.form</field>
        <field name="model">stock.inventory.history</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="location_id"/>
                    <field name="inventory_id"/>
                    <field name="create_date"/>
                    <field name="accuracy"/>
                </group>
            </form>
        </field>
    </record>

    <record id="stock_inventory_history_graph_view" model="ir.ui.view">
        <field name="name">stock.inventory.history.graph</field>
        <field name="model">stock.inventory.history</field>
        <field name="arch" type="xml">
            <graph type="line">
                <field name="create_date" interval="day"/>
                <field name="accuracy"/>
                <field name="inventory_id"/>
            </graph>
        </field>
    </record>

</odoo>
