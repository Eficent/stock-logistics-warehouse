<odoo>

    <record id="qty_reason_encoded_selection" model="ir.ui.view">
        <field name="name">Select qty_reason_encoded config parameter</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='production_lot_info']" position='after'>
                <h2>Inventory Adjustment</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="qty_reason_encoded"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="qty_reason_encoded"/>
                            <div class="text-muted">
                                Manage predefined change quantity reasons
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
