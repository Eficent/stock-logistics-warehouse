<odoo>
    <data>
        <record id="view_change_product_quantity_reason" model="ir.ui.view">
            <field name="name">Change Product Quantity Reason</field>
            <field name="model">stock.change.product.qty</field>
            <field name="inherit_id" ref="stock.view_change_product_quantity"/>
            <field name="arch" type="xml">
                <field name="new_quantity" position="after">
                    <field name="reason" attrs=
                        "{'required':[('qty_reason_encoded','=',False)]}"/>
                    <field name="encoded_reason" attrs=
                        "{'required':[('qty_reason_encoded','=',True)],
                          'invisible':[('qty_reason_encoded','=',False)]}"/>
                    <field name="company_id" invisible="1"/>
                    <field name="qty_reason_encoded" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
